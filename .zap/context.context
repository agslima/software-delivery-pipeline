context
  name=app-context
  description=CI weekly DAST context (FE+BE)

  # ====================================================================
  # SCOPE (STRICT)
  # Only allow the ephemeral targets inside the Compose network.
  # ====================================================================
  includeInContextRegexes=^http://frontend:8080/.*,^http://backend:8080/.*

  # ====================================================================
  # EXCLUSIONS
  # 1) Hard deny: any host that is NOT frontend/backend (prevents CDN drift)
  # 2) Drop noisy assets and operational endpoints
  # ====================================================================
  excludeFromContextRegexes=\
^https?://(?!frontend:8080|backend:8080).*$,\
^http://(frontend|backend):8080/.*\.(css|js|map|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$,\
^http://(frontend|backend):8080/(health|metrics)(/.*)?$,\
^http://(frontend|backend):8080/(favicon\.ico|robots\.txt)$,\
^http://(frontend|backend):8080/(static|assets)(/.*)?$,\
^http://backend:8080/(swagger|api-docs|openapi)(/.*)?$,\
^http://backend:8080/.*\b(logout|signout)\b.*$

  # Optional: keep empty unless using ZAP tech sets
  technology=
